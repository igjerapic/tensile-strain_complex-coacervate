read_restart lmp_bin/equilSubstrates.bin

include ${SETTINGS_FILE}

####################################
#### EQUILIBRATE CONFINED SYSTEM
####################################
dielectric 1.0
variable epsilon_subs equal ${epsilon_PS}

pair_coeff    1*2 1*2 1.0 1.0 2.5 10.0
pair_coeff    1*2 3 ${epsilon_subs} 1.0 2.5 10.0
pair_coeff    3 3 0.0 1.0 2.5 10.0 # substrate self-interaction

# run under NVT 
fix nvt1 chains nvt temp ${Temp2} ${Temp2} ${Tdamping}
# fix subRigid top_sub rigid/nve single 

dump mydumpSubs1 all custom 500 lmp_trj/equilSubstratesNVT1.dat id type mol xu yu zu vx vy vz c_stressA[1] c_stressA[2] c_stressA[3]
dump_modify mydumpSubs1 sort id

restart 500 lmp_bin/restartSubsNVT1.bin lmp_bin/restartSubsNVT2.bin
run 500000 upto

write_data lmp_data/equilSubstrates_restart.data
write_restart lmp_bin/equilSubstrates_restart.bin

